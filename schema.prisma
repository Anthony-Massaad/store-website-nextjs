// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Discount {
    id          Int @default(autoincrement()) @id
    percentage  Float
    endDate     DateTime
    product     Product @relation(fields: [productId], references: [id])
    productId   Int @unique
}

model CartItem {
    id          Int @default(autoincrement()) @id
    product     Product @relation(fields: [productId], references: [id])
    productId   Int
    quantity    Int 
    cart        Cart @relation(fields: [cartId], references: [id])
    cartId      Int
}

model Cart {
    id          Int @default(autoincrement()) @id
    cartItems   CartItem[]
    user        User @relation(fields: [userId], references: [id])
    userId      Int @unique
}

model Product {
    id                 Int @default(autoincrement()) @id
    name               String
    quantity           Int
    category           String
    image              String
    rating             Float
    numOfPeopleRated   Int
    price              Float
    description        String
    discount           Discount?
    cartItems          CartItem[]
}

model User {
    id          Int @default(autoincrement()) @id
    email       String @unique
    password    String
    firstName   String
    lastName    String
    username    String
    address     String
    cart        Cart?
}